{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./dist",
    "tsBuildInfoFile": "./dist/.tsbuildinfo",
    "emitDeclarationOnly": true,
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "skipLibCheck": true,
    "strict": true,
    "types": ["node"]
  },
  "include": ["./src"],
  "exclude": ["node_modules"],
  "references": [
    {
      "path": "../env/tsconfig.json"
    }
  ]
}
