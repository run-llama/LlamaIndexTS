{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local"],
  "pipeline": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", "build/**"]
    },
    "edge": {
      "dependsOn": ["^edge"],
      "outputs": ["dist/**", "build/**"]
    },
    "lint": {
      "inputs": ["packages/eslint-config-custom"]
    },
    "test": {
      "dependsOn": ["^build", "^edge"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    }
  }
}
